{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "app": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "replicas": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        }
      },
      "required": ["name"]
    },
    "enabled": {
      "type": "boolean"
    }
  },
  "required": ["app"]
}