{
    "env": {
      "browser": false,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "node_modules",
      "dist",
      "hack"
    ],
    "root": true
}